<launch>
  <arg name="launch_driver" default="true"/>

  <group>
    <push-ros-namespace namespace="autopilot"/>
    <!-- check  <include file="$(find-pkg-share autopilot_driver)/launch/autopilot_driver.launch.py">  if it doesnt work. -->
    <include file="$(find-pkg-share autopilot_driver)/autopilot_driver.launch.py">
    </include>

    <node pkg="autopilot_driver" name="autopilot_sensory_node" exec="apu_sensory" if="$(var launch_driver)">
    </node>
  </group>
</launch>
